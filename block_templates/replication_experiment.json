{
  "block_type": "mismatch_paradigm",
  "name": "Frequency Prediction Task",
  "description": "A 4kHz cue predicts a tone from a high-frequency range (7-9kHz). Mismatches are omissions or tones from a low-frequency range (1-3kHz).",
  
  "n_trials": 200,
  
  "mismatches": [
    {
      "type": "omission",
      "probability": 0.1
    },
    {
      "type": "lower_frequency_range",
      "probability": 0.1
    }
  ],
  
  "cue": {
    "stim_type": "tone",
    "params": {
      "freq_hz": 4000,
      "dur_ms": 100,
      "level_db": 60
    }
  },
  
  "outcome": {
    "stim_type": "tone",
    "params": {
      "freq_hz": {
        "type": "random_uniform",
        "min": 7000,
        "max": 9000
      },
      "dur_ms": 100,
      "level_db": 60
    }
  },

  "mismatch_params": {
    "lower_freq_hz": {
      "type": "random_uniform",
      "min": 1000,
      "max": 3000
    }
  },
  
  "timing": {
    "delay_ms": 500,
    "iti_min_sec": 1.5,
    "iti_max_sec": 2.5
  }
}